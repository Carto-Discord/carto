{
  "name": "carto-client",
  "version": "0.1.0",
  "main": "build/src/index.js",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf build/",
    "postbuild": "copyfiles .env build/",
    "build": "tsc",
    "build:package": "copyfiles --exclude build/src/registerCommands* build/**/* package.json package-lock.json package",
    "register": "node ./build/src/registerCommands.js",
    "start": "functions-framework --source=build/src/ --target=slashFunction",
    "test": "jest --watch",
    "test:ci": "jest",
    "test:coverage": "jest --collectCoverage",
    "watch": "concurrently \"tsc -w\" \"nodemon --watch ./build/ --exec npm run start\""
  },
  "author": "Tohaker",
  "license": "ISC",
  "dependencies": {
    "node-fetch": "^3.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "1.9.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "15.0.3",
    "@types/node-fetch": "3.0.2",
    "concurrently": "6.2.1",
    "copyfiles": "2.4.1",
    "jest": "27.2.1",
    "nodemon": "2.0.13",
    "rimraf": "3.0.2",
    "slash-commands": "1.5.0",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "moduleNameMapper": {
      "(.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(fetch-blob|node-fetch)/)"
    ]
  }
}
